# ==========================
# Flutter/Dart Specific
# ==========================

# Directory created by Dart for build tools and local configurations.
.dart_tool/

# Installed Flutter plugins.
.flutter-plugins
.flutter-plugins-dependencies

# File automatically generated by Pub (Dart's package manager).
.packages

# Directories and files generated during the build process.
build/

# Dependency lock file. Optional to include based on your workflow.
pubspec.lock

# Directory generated by dartdoc for API documentation.
doc/api/

# Environment variables configuration file (optional but common).
.env*

# Avoid committing generated JavaScript files (produced by dart2js).
*.dart.js
*.info.json
*.js             # Do not include if the project uses JavaScript source files.
*.js_
*.js.deps
*.js.map

# ==========================
# IDEs and Tools
# ==========================

# IntelliJ/Android Studio local configuration files.
*.iml
*.ipr
*.iws
.idea/

# VS Code local settings files.
.vscode/

# ==========================
# Operating System Files
# ==========================

# macOS directory index file.
.DS_Store

# Windows directory index file.
Thumbs.db

# ==========================
# Documentation and Logs
# ==========================

# Logs or temporary files created during execution or debugging.
*.log
*.tmp
*.swp

# ==========================
# iOS/Xcode
# ==========================

# Local files generated by Xcode during builds and configurations.
ios/**/*.mode1v3
ios/**/*.mode2v3
ios/**/*.moved-aside
ios/**/*.pbxuser
ios/**/*.perspectivev3
ios/**/.xcuserdata
ios/**/DerivedData/
ios/**/Pods/

# Flutter files generated by Xcode on iOS.
ios/Flutter/App.framework
ios/Flutter/Flutter.framework
ios/Flutter/Generated.xcconfig
ios/Flutter/app.flx
ios/Flutter/flutter_assets/
ios/Flutter/flutter_export_environment.sh

# ==========================
# Android/Gradle
# ==========================

# Gradle directories generated for Android builds.
android/.gradle
android/local.properties
android/captures/

# Gradle Wrapper configuration files.
android/gradlew
android/gradlew.bat

# ==========================
# Miscellaneous Exclusions
# ==========================

# File generated by Flutter for plugin registration.
web/**/lib/generated_plugin_registrant.dart

# ==========================
# Exceptions (keep default files)
# ==========================

# Ensure required iOS default files are not ignored.
!ios/**/default.mode1v3
!ios/**/default.mode2v3
!ios/**/default.pbxuser
!ios/**/default.perspectivev3
